# Example environment variables for block-agent-backend
# Rename this file to .env and fill in your actual API keys

# General settings
BLOCK_AGENTS_LOG_LEVEL=info
BLOCK_AGENTS_MAX_PIPELINE_RUNTIME_SECONDS=3600

# LLM providers
BLOCK_AGENTS_LLM_DEFAULT_PROVIDER=openai

# OpenAI API key (required for OpenAI models)
BLOCK_AGENTS_LLM_PROVIDERS_OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API key (required for Claude models)
BLOCK_AGENTS_LLM_PROVIDERS_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Cohere API key (required for Cohere models)
BLOCK_AGENTS_LLM_PROVIDERS_COHERE_API_KEY=your-cohere-key-here

# API server settings
BLOCK_AGENTS_API_PORT=8080
BLOCK_AGENTS_API_HOST=0.0.0.0